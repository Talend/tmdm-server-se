<?xml version="1.0" encoding="UTF-8"?>
<connector xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/connector_1_5.xsd" version="1.5">
	<display-name>Logging Connector</display-name>
	<vendor-name>Amalto</vendor-name>
	<eis-type>Logging Connector</eis-type>
	<resourceadapter-version>1.0</resourceadapter-version>
	<resourceadapter>
		<resourceadapter-class>com.amalto.connector.logging.ra.LoggingResourceAdapter</resourceadapter-class>
		<outbound-resourceadapter>
			<connection-definition>
				<managedconnectionfactory-class>com.amalto.connector.jca.ManagedConnectionFactoryImpl</managedconnectionfactory-class>
				<connectionfactory-interface>javax.resource.cci.ConnectionFactory</connectionfactory-interface>
				<connectionfactory-impl-class>com.amalto.connector.jca.ConnectionFactoryImpl</connectionfactory-impl-class>
				<connection-interface>javax.resource.cci.Connection</connection-interface>
				<connection-impl-class>com.amalto.connector.jca.ConnectionImpl</connection-impl-class>
			</connection-definition>
			<transaction-support>NoTransaction</transaction-support>
			<reauthentication-support>false</reauthentication-support>
		</outbound-resourceadapter>
		<inbound-resourceadapter>
			<messageadapter>
				<messagelistener>
					<messagelistener-type>javax.resource.cci.MessageListener</messagelistener-type>
					<activationspec>
						<activationspec-class>com.amalto.connector.jca.ActivationSpecImpl</activationspec-class>
					</activationspec>
				</messagelistener>
			</messageadapter>
		</inbound-resourceadapter>
	</resourceadapter>
</connector>