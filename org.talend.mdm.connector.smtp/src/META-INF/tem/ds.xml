<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE connection-factories
    PUBLIC "-//JBoss//DTD JBOSS JCA Config 1.5//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-ds_1_5.dtd">
  <!-- ==================================================================== -->
  <!-- ConnectionManager setup for the SMTP Connector  -->
  <!-- ==================================================================== -->

<connection-factories>
	<no-tx-connection-factory>
		<jndi-name>jca/xtentis/connector/smtp</jndi-name>
		<rar-name>tem.ear#zz.20.mdm.connector.smtp.rar</rar-name>
		<connection-definition>javax.resource.cci.ConnectionFactory</connection-definition>
		<application-managed-security/>
		<min-pool-size>0</min-pool-size> <!-- default 0 -->
		<max-pool-size>20</max-pool-size><!-- default 20-->
		<blocking-timeout-millis>30000</blocking-timeout-millis> <!-- default 30000 -->
		<idle-timeout-minutes>2</idle-timeout-minutes>
	</no-tx-connection-factory>
</connection-factories>