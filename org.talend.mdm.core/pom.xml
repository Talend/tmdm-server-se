    <modelVersion>4.0.0</modelVersion>

    <groupId>org.talend.mdm</groupId>
    <artifactId>org.talend.mdm.core</artifactId>
    <version>${mdm.build.version}</version>
    <packaging>war</packaging>
    <name>Talend MDM Core</name>
    <description>Talend MDM Core features.</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <war>zz.30.core.war</war>
        <ejbs>zz.20.core.jar</ejbs>
        <lib>z.mdm.core.jar</lib>
        <service>org.talend.mdm.jullog4jservice.jar</service>
    </properties>

    <profiles>
        <profile>
            <id>JBOSS_422</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>jboss</groupId>
                    <artifactId>jbossx</artifactId>
                    <version>4.2.2.GA</version>
                    <systemPath>${tom.location}/talend.mdm.libraries/lib/jbosssx.jar</systemPath>
                    <scope>system</scope>
                </dependency>

                <dependency>
                    <groupId>jboss</groupId>
                    <artifactId>jboss-system</artifactId>
                    <version>4.2.2.GA</version>
                    <systemPath>${tom.location}/talend.mdm.libraries/lib/jboss-system.jar</systemPath>
                    <scope>system</scope>
                </dependency>

                <dependency>
                    <groupId>jboss</groupId>
                    <artifactId>jboss-jmx</artifactId>
                    <version>4.2.2.GA</version>
                    <systemPath>${tom.location}/talend.mdm.libraries/lib/jboss-jmx.jar</systemPath>
                    <scope>system</scope>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/lib</outputDirectory>
                                    <!-- icu4j is compiled in a non-1.6 compatible version -->
                                    <excludeArtifactIds>icu4j,cxf-bundle</excludeArtifactIds>
                                    <excludeScope>provided</excludeScope>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>jboss-package</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <jar destfile="${build.directory}/${ejbs}" manifest="war/META-INF/MANIFEST.MF">
                                            <zipfileset dir="${project.basedir}">
                                                <include name="RELEASE.NOTES"/>
                                                <include name="${project.version}"/>
                                            </zipfileset>
                                            <zipfileset dir="${project.build.outputDirectory}"/>
                                            <!-- TODO Should not have to put all deps in EJB JAR -->
                                            <zipfileset dir="${project.build.directory}/lib" includes="*.jar"
                                                        prefix="WEB-INF/lib"/>
                                        </jar>

                                        <!-- used by transformer plugins -->
                                        <jar destfile="${build.directory}/${lib}"
                                             manifest="war/META-INF/MANIFEST.MF">
                                            <zipfileset dir="${project.basedir}">
                                                <include name="${project.version}"/>
                                                <include name="RELEASE.NOTES"/>
                                            </zipfileset>
                                            <zipfileset dir="${project.build.outputDirectory}"
                                                        includes="**/util/*.class"/>
                                            <zipfileset dir="${project.build.outputDirectory}"
                                                        includes="**/*POJO*.class"/>
                                        </jar>

                                        <!-- JUL to log4j service MBean -->
                                        <jar destfile="${build.directory}/${service}"
                                             manifest="war/META-INF/MANIFEST.MF">
                                            <zipfileset dir="${project.basedir}">
                                                <include name="${project.version}"/>
                                                <include name="RELEASE.NOTES"/>
                                            </zipfileset>
                                            <zipfileset dir="${project.build.outputDirectory}"
                                                        includes="com/amalto/core/util/JULLog4j*.class"
                                                        prefix="WEB-INF/classes"/>
                                        </jar>

                                        <jar destfile="${build.directory}/${war}" manifest="war/META-INF/MANIFEST.MF">
                                            <zipfileset dir="war/WEB-INF" prefix="WEB-INF">
                                                <include name="web.xml"/>
                                            </zipfileset>
                                            <zipfileset dir="war/WEB-INF" prefix="WEB-INF">
                                                <include name="jboss-web.xml"/>
                                            </zipfileset>
                                            <zipfileset dir=".">
                                                <include name="RELEASE.NOTES"/>
                                            </zipfileset>
                                            <zipfileset dir="${project.build.directory}" prefix="classes" includes="**/servlet/*.class"/>
                                            <zipfileset dir="war" includes="WEB-INF/lib/*.*"/>
                                            <zipfileset dir="${project.build.directory}/lib" includes="*.jar" prefix="WEB-INF/lib"/>
                                        </jar>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

