        <war>zz.30.core</war>
        <ejbs>zz.20.core</ejbs>
        <lib>z.mdm.core</lib>
        <service>org.talend.mdm.jullog4jservice</service>
        <version.properties>product_version.properties</version.properties>
    </properties>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <testSourceDirectory>test</testSourceDirectory>
        <resources>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>**/**.conf</include>
                    <include>**/**.xsd</include>
                    <include>**/**.xml</include>
                    <include>**/**.dtd</include>
                    <include>**/initdb/data/**</include>
                    <include>**/util/phonet-utf8.*</include>
                </includes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>test</directory>
                <includes>
                    <include>**/**.zip</include>
                    <include>**/**.xsd</include>
                    <include>**/**.xml</include>
                    <include>**/**.dtd</include>
                </includes>
            </testResource>
        </testResources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-ejbs-libs</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/WEB-INF/lib</outputDirectory>
                            <excludeGroupIds>org.talend.mdm</excludeGroupIds>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-ejbs-jdbcdrivers</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/WEB-INF/lib</outputDirectory>
                            <includeArtifactIds>mysql-connector-java,ojdbc6,sqljdbc4</includeArtifactIds>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-war-jdbcdrivers</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/war/WEB-INF/lib</outputDirectory>
                            <includeArtifactIds>mysql-connector-java,ojdbc6,sqljdbc4</includeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-ejbs</id>
                        <phase>package</phase>
                        <configuration>
                            <classifier>ejbs</classifier>
                            <includes>
                                <include>**</include>
                                <include>${version.properties}</include>
                            </includes>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jar-lib</id>
                        <phase>package</phase>
                        <configuration>
                            <classifier>lib</classifier>
                            <includes>
                                <include>**/util/*.class</include>
                                <include>**/*POJO*.class</include>
                                <include>${version.properties}</include>
                            </includes>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jar-service</id>
                        <phase>package</phase>
                        <configuration>
                            <classifier>service</classifier>
                            <includes>
                                <include>com/amalto/core/util/JULLog4j*.class</include>
                                <include>${version.properties}</include>
                            </includes>
                        </configuration>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>${basedir}/war/WEB-INF/web.xml</webXml>
                    <packagingIncludes>META-INF/**,WEB-INF/*,WEB-INF/lib/*.jar,WEB-INF/classes/**/servlet/*.class,WEB-INF/classes/${version.properties}</packagingIncludes>
                    <packagingExcludes>WEB-INF/lib/org.talend.mdm.*.jar</packagingExcludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy-jboss</id>
                        <configuration>
                            <tasks>
                                <delete file="${jboss.lib.dir}/${lib}.jar" />
                                <delete file="${jboss.lib.dir}/${service}.jar" />
                                <delete file="${jboss.deploy.dir}/${ejbs}.jar" />
                                <delete file="${jboss.deploy.dir}/${war}.war" />
                                <delete file="${jboss.bin.dir}/mdm.conf" />
                                <delete file="${jboss.bin.dir}/mdm.conf.template" />
                                <delete file="${jboss.bin.dir}/datasources.xml.template" />

                                <copy
                                    file="${project.build.directory}/${project.build.finalName}-lib.jar"
                                    tofile="${jboss.lib.dir}/${lib}.jar" />
                                <copy
                                    file="${project.build.directory}/${project.build.finalName}-service.jar"
                                    tofile="${jboss.lib.dir}/${service}.jar" />
                                <copy
                                    file="${project.build.directory}/${project.build.finalName}-ejbs.jar"
                                    tofile="${jboss.deploy.dir}/${ejbs}.jar" />
                                <copy file="${project.build.directory}/${project.build.finalName}.war"
                                    tofile="${jboss.deploy.dir}/${war}.war" />
                                <copy file="mdm.conf" tofile="${jboss.bin.dir}/mdm.conf" />
                                <copy file="mdm.conf.template" tofile="${jboss.bin.dir}/mdm.conf.template" />
                                <copy file="war/default-datasources.xml" tofile="${jboss.bin.dir}/datasources.xml.template" />
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

