    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.talend.mdm.service.smtp</artifactId>
    <name>org.talend.mdm.service.smtp</name>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>**/**.xml</include>
                    <include>**/**.MF</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <finalName>zz.30.mdm.service.smtp.ejb</finalName>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
