<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN" "http://getahead.org/dwr/dwr20.dtd">
<dwr>
    <allow>
        <convert converter="bean" match="java.lang.Exception"/>
        <convert converter="bean" match="java.lang.StackTraceElement"/>
        
        <create creator="new" javascript="LayoutInterface">
            <param name="class" value="com.amalto.webapp.core.dwr.LayoutDWR"/>
        </create>
        
        <convert converter="bean" match="com.amalto.webapp.core.bean.Author"/>
        <convert converter="bean" match="com.amalto.webapp.core.bean.ListRange"/>
        <convert converter="bean" match="com.amalto.webapp.core.bean.ToDoItem"/>

    </allow>

</dwr>
