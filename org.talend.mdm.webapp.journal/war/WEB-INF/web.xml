<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Servlets -->
    <servlet>
        <servlet-name>journalServlet</servlet-name>
        <servlet-class>org.talend.mdm.webapp.general.gwt.ProxyGWTServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>journalServlet</servlet-name>
        <url-pattern>/journal/JournalService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>journalExportServlet</servlet-name>
        <servlet-class>org.talend.mdm.webapp.journal.server.servlet.JournalExportServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>journalExportServlet</servlet-name>
        <url-pattern>/journalExport</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <display-name>DWR Servlet</display-name>
        <servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/secure/dwr/*</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>Journal.html</welcome-file>
    </welcome-file-list>

    <!-- Security -->
    @{dev.mode.excluded.start}
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure resources</web-resource-name>
            <url-pattern>/secure/*</url-pattern>
            <url-pattern>/journal/JournalService</url-pattern>
            <url-pattern>/journalExport</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Main page resource</web-resource-name>
            <url-pattern>/Journal.html</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>WEB-INF</web-resource-name>
            <url-pattern>/WEB-INF/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>administration</role-name>
            <role-name>authenticated</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>xtentisSecurity</realm-name>
        <form-login-config>
            <form-login-page>/loginAgent.html</form-login-page>
            <form-error-page>/loginAgent.html</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>administration</role-name>
    </security-role>
    <security-role>
        <role-name>authenticated</role-name>
    </security-role>
    @{dev.mode.excluded.end}

</web-app>
