<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <!-- ================ -->
    <!--    Appenders     -->
    <!-- ================ -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="INFO" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}] %m%n" />
        </layout>
    </appender>

    <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${mdm.root}/log/mdm.log" />
        <param name="Append" value="true" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <param name="Threshold" value="INFO" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%c] %m%n" />
        </layout>
    </appender>

    <appender name="MATCH_LOG_FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${mdm.root}/log/mdm-match.log" />
        <param name="Append" value="false" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <param name="Threshold" value="INFO" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %m%n" />
        </layout>
    </appender>

    <!-- LogStash Appenders               -->
    <!-- NOTE: update RemoteHost and Port -->
    <!--
    <appender name="LOG_STASH_SERVER" class="org.apache.log4j.net.SocketAppender">
        <param name="RemoteHost" value="localhost"/>
        <param name="Port" value="8053"/>
    </appender>
    <appender name="LOG_STASH_MATCH" class="org.apache.log4j.net.SocketAppender">
        <param name="RemoteHost" value="localhost"/>
        <param name="Port" value="8054"/>
    </appender>
    -->

    <!-- ================ -->
    <!--    Categories    -->
    <!-- ================ -->
    <category name="org.talend">
        <priority value="INFO" />
    </category>

    <category name="talend.ext">
        <priority value="INFO" />
    </category>

    <category name="com.amalto">
        <priority value="INFO" />
    </category>

    <category name="com.amalto.core.storage.task" additivity="false">
        <priority value="INFO" />
        <appender-ref ref="MATCH_LOG_FILE" />
        <!-- <appender-ref ref="LOG_STASH_MATCH"/> -->
    </category>

    <category name="org.talend.dataquality.matchmerge" additivity="false">
        <priority value="INFO" />
        <appender-ref ref="MATCH_LOG_FILE" />
        <!-- <appender-ref ref="LOG_STASH_MATCH"/> -->
    </category>

    <!-- Enable MDM Storage debugging
    <category name="com.amalto.core.storage">
        <priority value="DEBUG"/>
    </category>
    -->

    <!-- Limit C3P0 to WARN as its INFO is verbose -->
    <category name="com.mchange.v2.c3p0.impl.AbstractPoolBackedDataSource">
        <priority value="WARN" />
    </category>
    <category name="com.mchange.v2.c3p0.stmt.GooGooStatementCache">
        <priority value="WARN" />
    </category>

    <!-- Limit hibernate to WARN as its INFO is verbose -->
    <category name="org.hibernate">
        <priority value="WARN" />
    </category>

    <!-- ================ -->
    <!--    Root          -->
    <!-- ================ -->
    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <!-- uncomment for logStash
        <appender-ref ref="LOG_STASH_SERVER"/>
        -->
        <!-- uncomment for chainsaw
        <appender-ref ref="ChainSawPDS"/>
        -->
    </root>

</log4j:configuration>