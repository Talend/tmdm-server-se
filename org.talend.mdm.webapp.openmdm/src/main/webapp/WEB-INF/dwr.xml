<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN" "http://getahead.org/dwr/dwr20.dtd">
<dwr>
    <allow>
        <convert converter="bean" match="com.amalto.webapp.core.bean.Author"/>
        <convert converter="bean" match="com.amalto.webapp.core.bean.ListRange"/>
        <convert converter="bean" match="com.amalto.webapp.core.bean.ToDoItem"/>
        <convert converter="bean" match="com.amalto.webapp.core.util.XtentisWebappException"/>
        <convert converter="bean" match="java.rmi.RemoteException"/>
        <convert converter="bean" match="java.lang.StackTraceElement"/>
        <convert converter="bean" match="java.lang.Exception"/>
        <convert converter="bean" match="com.amalto.webapp.core.bean.ComboItemBean"/>
        <convert converter="bean" match="java.lang.NullPointerException"/>

        <create creator="new" javascript="ActionsInterface">
            <param name="class" value="com.amalto.webapp.v3.xtentismdm.dwr.ActionsDWR"/>
            <auth method="getClusters" role="authenticated"/>
            <auth method="getModels" role="authenticated"/>
            <auth method="getCluster" role="authenticated"/>
            <auth method="getModel" role="authenticated"/>
            <auth method="setClusterAndModel" role="authenticated"/>
        </create>
        <create creator="new" javascript="LoginInterface">
            <param name="class" value="com.amalto.webapp.v3.xtentismdm.dwr.LoginDWR"/>
        </create>
        <create creator="new" javascript="ItemsBrowserInterface">
            <param name="class" value="org.talend.mdm.webapp.browserecords.server.ItemsBrowserDWR"/>
        </create>
        <create creator="new" javascript="LayoutInterface">
            <param name="class" value="com.amalto.webapp.core.dwr.LayoutDWR"/>
        </create>
    </allow>
</dwr>
