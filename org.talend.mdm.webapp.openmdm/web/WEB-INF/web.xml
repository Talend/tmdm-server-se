<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app >
    <!-- <distributable/> -->
    
       <listener>
          <listener-class>com.amalto.webapp.v3.xtentismdm.servlet.SessionListener</listener-class>
       </listener>
    
        <servlet>
            <servlet-name>dwr-invoker</servlet-name>
            <display-name>DWR Servlet</display-name>
            <servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
            <init-param>
                <param-name>debug</param-name>
                <param-value>true</param-value>
            </init-param>
        </servlet>
    
        
        <servlet>
            <servlet-name>dispatch</servlet-name>
            <display-name>Dispatch</display-name>
            <servlet-class>com.amalto.webapp.v3.xtentismdm.servlet.ControllerServlet</servlet-class>
        </servlet>
        
        <servlet>
            <servlet-name>ItemTreeServlet</servlet-name>
            <display-name>ItemTreeServlet</display-name>
            <servlet-class>com.amalto.webapp.widget.ItemTreeServlet</servlet-class>
        </servlet>
        
        <servlet>
            <servlet-name>LogoutServlet</servlet-name>
            <display-name>LogoutServlet</display-name>
            <servlet-class>com.amalto.webapp.v3.xtentismdm.servlet.LogoutServlet</servlet-class>
        </servlet>
        
        <servlet-mapping>
            <servlet-name>LogoutServlet</servlet-name>
            <url-pattern>/LogoutServlet</url-pattern>
        </servlet-mapping>
    
        <servlet-mapping>
            <servlet-name>ItemTreeServlet</servlet-name>
            <url-pattern>/secure/widget/ItemTreeServlet</url-pattern>
        </servlet-mapping>
        
        <servlet-mapping>
            <servlet-name>dispatch</servlet-name>
            <url-pattern>/secure/</url-pattern>
        </servlet-mapping>   
        
        <servlet-mapping>
            <servlet-name>dwr-invoker</servlet-name>
            <url-pattern>/secure/dwr/*</url-pattern>
        </servlet-mapping> 
        
        <servlet-mapping>
            <servlet-name>dwr-invoker</servlet-name>
            <url-pattern>/login/dwr/*</url-pattern>
        </servlet-mapping>

        <error-page>
            <error-code>403</error-code>
            <location>/auth/login.jsp?error=loginFailedAndClean</location>
        </error-page>
        <error-page>
            <error-code>404</error-code>
            <location>/auth/login.jsp?error=loginFailedAndClean</location>
        </error-page>
            
        <security-constraint>
        
            <web-resource-collection>
                <web-resource-name>Secure resources</web-resource-name>
                <url-pattern>/secure/*</url-pattern>
                <url-pattern>/LogoutServlet</url-pattern>
            </web-resource-collection>
        
            <web-resource-collection>
                <web-resource-name>WEB-INF</web-resource-name>
                <url-pattern>/WEB-INF/*</url-pattern>
            </web-resource-collection>    
        
            <auth-constraint>
                <role-name>administration</role-name>
                <role-name>authenticated</role-name>
            </auth-constraint>
        
        </security-constraint>
        
        
        <login-config>
            <auth-method>FORM</auth-method>
            <realm-name>xtentisSecurity</realm-name>
            <form-login-config>
                <form-login-page>/auth/login.jsp</form-login-page>
                <form-error-page>/auth/login.jsp?error=loginFailed</form-error-page>
            </form-login-config>
        </login-config>
        
        
        <security-role>
            <role-name>administration</role-name>
        </security-role> 
        <security-role>
            <role-name>authenticated</role-name>
        </security-role> 

</web-app>
