<?xml version="1.0" encoding="UTF-8"?>
<dwr>
    <allow>
        <convert converter="bean" match="java.lang.Exception"/>
        <convert converter="bean" match="java.lang.StackTraceElement"/>
        
        <create creator="new" javascript="ReportingInterface">
            <param name="class" value="com.amalto.webapp.v3.reporting.dwr.ReportingDWR"/>
        </create>
        
        <convert converter="bean" match="com.amalto.webapp.v3.reporting.bean.Reporting"/>
        <convert converter="bean" match="com.amalto.webapp.v3.reporting.bean.ReportingField"/>
        <convert converter="bean" match="com.amalto.webapp.v3.reporting.bean.ReportingFilter"/>
        <convert converter="bean" match="com.amalto.webapp.v3.reporting.bean.ReportingParameter"/>
    </allow>

</dwr>
