<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
 <parent>
  <groupId>org.talend.mdm</groupId>
  <artifactId>mdm-base</artifactId>
  <version>${mdm.build.version}</version>
  <relativePath>../org.talend.mdm.base/pom.xml</relativePath>
 </parent>

 <modelVersion>4.0.0</modelVersion>
 <artifactId>org.talend.mdm.webapp.stagingarea</artifactId>
 <packaging>war</packaging>
 <name>org.talend.mdm.webapp.stagingarea</name>

 <dependencies>
  <dependency>
   <groupId>junit</groupId>
   <artifactId>junit</artifactId>
  </dependency>
  <dependency>
    <groupId>log4j</groupId>
    <artifactId>log4j</artifactId>
  </dependency>
  <dependency>
   <groupId>org.powermock</groupId>
   <artifactId>powermock-module-junit3</artifactId>
  </dependency>
  <dependency>
   <groupId>org.powermock</groupId>
   <artifactId>powermock-api-mockito</artifactId>
  </dependency>
  <dependency>
   <groupId>com.google.gwt</groupId>
   <artifactId>gwt-dev</artifactId>
  </dependency>
  <dependency>
   <groupId>com.google.gwt</groupId>
   <artifactId>gwt-servlet</artifactId>
  </dependency>
  <dependency>
   <groupId>com.google.gwt</groupId>
   <artifactId>gwt-user</artifactId>
  </dependency>
  <dependency>
   <groupId>com.allen-sauer.gwt.log</groupId>
   <artifactId>gwt-log</artifactId>
  </dependency>
  <dependency>
   <groupId>com.extjs</groupId>
   <artifactId>gxt</artifactId>
  </dependency>
  <dependency>
   <groupId>org.restlet.gwt</groupId>
   <artifactId>org.restlet</artifactId>
  </dependency>
  <dependency>
   <groupId>org.restlet.gwt</groupId>
   <artifactId>org.restlet.ext.json</artifactId>
  </dependency>
  <dependency>
   <groupId>org.restlet.gwt</groupId>
   <artifactId>org.restlet.ext.xml</artifactId>
  </dependency>
  <!-- MDM dependencies -->
  <dependency>
   <groupId>org.talend.mdm</groupId>
   <artifactId>org.talend.mdm.webapp.base</artifactId>
   <version>${project.version}</version>
   <scope>system</scope>
   <systemPath>${tom.location}/org.talend.mdm.webapp.base/target/org.talend.mdm.webapp.base.jar</systemPath>
  </dependency>
  <dependency>
   <groupId>org.talend.mdm</groupId>
   <artifactId>org.talend.mdm.webapp.core</artifactId>
  </dependency>
  <dependency>
   <groupId>org.talend.mdm</groupId>
   <artifactId>org.talend.mdm.commmon</artifactId>
  </dependency>
  <dependency>
   <groupId>com.google.gwt.google-apis</groupId>
   <artifactId>gwt-visualization</artifactId>
  </dependency>
 </dependencies>
 


 <build>
  <plugins>

   <plugin>
    <groupId>org.codehaus.mojo</groupId>
    <artifactId>gwt-maven-plugin</artifactId>
    <executions>
     <execution>
      <id>gwt-compile-stagingarea</id>
      <configuration>
       <module>org.talend.mdm.webapp.stagingareacontrol.StagingareaControl</module>
      </configuration>
      <goals>
       <goal>compile</goal>
      </goals>
     </execution>
     <execution>
      <id>gwt-compile-stagingarea-browse</id>
      <configuration>
       <module>org.talend.mdm.webapp.stagingareabrowser.StagingareaBrowse</module>
      </configuration>
      <goals>
       <goal>compile</goal>
      </goals>
     </execution>
    </executions>
   </plugin>

   <!-- Apply dev mode exclusions -->
   <plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-antrun-plugin</artifactId>
    <executions>
     <execution>
      <id>devmode-exclusions</id>
     </execution>
    </executions>
   </plugin>

  </plugins>
 </build>
</project>
