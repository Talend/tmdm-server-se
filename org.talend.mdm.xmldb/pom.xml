<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.talend.mdm</groupId>
        <artifactId>mdm-base</artifactId>
        <version>${mdm.build.version}</version>
        <relativePath>../org.talend.mdm.base/pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.talend.mdm.xmldb</artifactId>
    <name>org.talend.mdm.xmldb</name>

    <build>
        <directory>${mdm.build.dir}</directory>
        <sourceDirectory>src</sourceDirectory>
        <testSourceDirectory>test</testSourceDirectory>
        <resources>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>**/**.conf</include>
                    <include>**/**.xsd</include>
                    <include>**/**.xml</include>
                    <include>**/**.dtd</include>
                    <include>**/**.properties</include>
                </includes>
                <excludes>
                    <exclude>com/amalto/xyleme/ejb/OLDXylemeWrapper.java</exclude>
                    <exclude>com/amalto/xyleme/test/ZZXylemeTest.java</exclude>
                    <exclude>com/amalto/xmldb/ejb/XmldbSFWrapperBean.java</exclude>
                    <exclude>com/amalto/xmldb/ejb/XmldbSLWrapperBean.java</exclude>
                    <exclude>com/amalto/xmldb/remote/facade/XmldbSLWrapperFacade.java</exclude>
                    <exclude>com/amalto/xmldb/ejb/</exclude>
                    <exclude>com/amalto/xmldb/remote/facade/</exclude>
                    <exclude>com/amalto/xmldb/remote/</exclude>
                    <exclude>com/amalto/xmldb/util/ToURLEncoded.java</exclude>
                </excludes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>test</directory>
                <includes>
                    <include>**/**.zip</include>
                    <include>**/**.xsd</include>
                    <include>**/**.xml</include>
                    <include>**/**.dtd</include>
                    <include>**/**.properties</include>
                </includes>
            </testResource>
        </testResources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.5.1</version>
                    <configuration>
                        <source>1.6</source>
                        <target>1.6</target>
                        <encoding>UTF-8</encoding>
                        <excludes>
		                    <exclude>com/amalto/xyleme/ejb/OLDXylemeWrapper.java</exclude>
		                    <exclude>com/amalto/xyleme/test/ZZXylemeTest.java</exclude>
		                    <exclude>com/amalto/xmldb/ejb/XmldbSFWrapperBean.java</exclude>
		                    <exclude>com/amalto/xmldb/ejb/XmldbSLWrapperBean.java</exclude>
		                    <exclude>com/amalto/xmldb/remote/facade/XmldbSLWrapperFacade.java</exclude>
		                    <exclude>com/amalto/xmldb/ejb/</exclude>
		                    <exclude>com/amalto/xmldb/remote/facade/</exclude>
		                    <exclude>com/amalto/xmldb/remote/</exclude>
		                    <exclude>com/amalto/xmldb/util/ToURLEncoded.java</exclude>
                        </excludes>
                    </configuration>
                </plugin>
                
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
        
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${tom.location}/talend.mdm.libraries/lib/commons-httpclient.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>exist-talendpatch</groupId>
            <artifactId>exist-talendpatch</artifactId>
            <version>1.4</version>
            <scope>system</scope>
            <systemPath>${tom.location}/talend.mdm.libraries/lib/z.exist.1.4.TalendPatch.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>xmlrpc-client</groupId>
            <artifactId>xmlrpc-client</artifactId>
            <version>3.1.2</version>
            <scope>system</scope>
            <systemPath>${tom.location}/org.talend.mdm.xmldb/lib-1.4/common/z.exist.1.4-xmlrpc-client-3.1.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>xmlrpc-common</groupId>
            <artifactId>xmlrpc-common</artifactId>
            <version>3.1.2</version>
            <scope>system</scope>
            <systemPath>${tom.location}/org.talend.mdm.xmldb/lib-1.4/common/z.exist.1.4-xmlrpc-common-3.1.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>xmlrpc-server</groupId>
            <artifactId>xmlrpc-server</artifactId>
            <version>3.1.2</version>
            <scope>system</scope>
            <systemPath>${tom.location}/org.talend.mdm.xmldb/lib-1.4/common/z.exist.1.4-xmlrpc-server-3.1.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>xmldb</groupId>
            <artifactId>xmldb</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${tom.location}/org.talend.mdm.xmldb/lib-1.4/common/z.exist.1.4-xmldb.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.xmlserver.interfaces</artifactId>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.commmon</artifactId>
        </dependency>
        <dependency>
            <groupId>org.talend.mdm</groupId>
            <artifactId>org.talend.mdm.commons.core</artifactId>
        </dependency>
    </dependencies>

</project>